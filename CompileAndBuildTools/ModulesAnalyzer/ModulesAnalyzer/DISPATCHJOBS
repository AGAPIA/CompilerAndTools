	ClearVectorOfProcessItems(&tasks);
	nrprocs = nrofprocs;
	
	TGAReader::STGA*  pTGAFile = (TGAReader::STGA*) imageaddress;
	const int pixelBytes = pTGAFile->byteCount;
	const int imageLineBytes = pixelBytes * pTGAFile->width;
	
	int iLinesPerProc = pTGAFile->height / nrofprocs;
	int iLinesToAddOne = pTGAFile->height % nrofprocs;
	int iLineIndex = 0;
	for (int i = 0; i < nrofprocs; i++)
	{
		int linesToThisProc = iLinesPerProc + (iLinesToAddOne > i ? 1 : 0);
	
		unsigned int iDataSize = imageLineBytes * (linesToThisProc + 2 - 1*(i == 0 || i == (nrofprocs-1)));
		unsigned char* pDataBegin = (unsigned char*) &pTGAFile->data[imageLineBytes * (iLineIndex - 1 * (i > 0))];	// Every index with the exception of first, gets a previous line
		int column = linesToThisProc - 1*(i == 0 || i == (nrofprocs-1));
	
	SetInputItemToVector(41, &tasks, i, "objects", (char*)pDataBegin13723264);
	SetInputItemToVector(42, &tasks, i, "r", 1);
	SetInputItemToVector(43, &tasks, i, "c", column);
	SetInputItemToVector(44, &tasks, i, "width", pTGAFile->width);
	SetInputItemToVector(45, &tasks, i, "height", pTGAFile->height);
		
		iLineIndex += linesToThisProc;
	}
